<h1>User List</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">User Name</th>
      <th scope="col">Email</th>
      <th scope="col">Exp</th>
      <th scope="col">Admin</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.name %></th>
      <td><%= user.email %></td>
      <td><%= user.exp %></td>
      <td><%= user.admin %></td>
      <td><%= link_to("Edit", "/home/user_edit/#{user.id}") %></td>
    </tr>
    <% end %>
    </tbody>
</table>
